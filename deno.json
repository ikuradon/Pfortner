{
  "tasks": {
    "dev": "deno run --allow-env --allow-net --allow-read --watch src/main.ts",
    "serve": "deno run --allow-env --allow-net --allow-read src/main.ts"
  },
  "lint": {
    "files": {
      "include": ["."]
    },
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "files": {
      "include": ["."]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 120,
      "indentWidth": 2,
      "semiColons": true,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
}
