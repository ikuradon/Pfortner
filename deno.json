{
  "fmt": {
    "include": [
      "."
    ],
    "indentWidth": 2,
    "lineWidth": 120,
    "proseWrap": "preserve",
    "semiColons": true,
    "singleQuote": true,
    "useTabs": false
  },
  "lint": {
    "include": [
      "."
    ],
    "rules": {
      "exclude": [
        "no-explicit-any"
      ],
      "tags": [
        "recommended"
      ]
    }
  },
  "tasks": {
    "dev": "deno run --unstable-net --allow-env --allow-net --allow-read --watch scripts/serve.ts",
    "serve": "deno run --unstable-net --allow-env --allow-net --allow-read scripts/serve.ts"
  }
}
