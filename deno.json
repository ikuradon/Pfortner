{
  "tasks": {
    "dev": "deno run --unstable --allow-env --allow-net --allow-read --watch scripts/serve.ts",
    "serve": "deno run --unstable --allow-env --allow-net --allow-read scripts/serve.ts"
  },
  "lint": {
    "include": ["."],
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "include": ["."],
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  }
}
